{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "group:allNonMajor",
    "config:best-practices"
  ],
  "reviewers": [
    "rparini"
  ],
  "schedule": [
    "before 5am on Saturday"
  ],
  "automerge": true,
  "automergeStrategy": "squash",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  },
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "prettier",
      "matchPackageNames": [
        "/prettier/"
      ]
    },
    {
      "description": "https://github.com/rparini/cxroots-app/issues/220",
      "matchDepNames": [
        "mathjax"
      ],
      "allowedVersions": "<3"
    }
  ]
}
